<script type="text/javascript">
  var isOpen = false;
  var showmoreWrapper = document.getElementsByClassName("showmore")[0];
  var btn = showmoreWrapper.getElementsByClassName("showmore-x-button")[0];
  var showmoreContainer = showmoreWrapper.getElementsByClassName("showmore-x-container")[0];

  close();

  btn.addEventListener("click",function(){
	  isOpen = !isOpen;
	  toggleOpen();
	  toggleLabel();
  })

  function toggleLabel(){
	  btn.querySelector("span").innerHTML =
		  isOpen ? "Show More" : "Show Less"
  }

  function toggleOpen(){
	  isOpen ?  open() : close();
  }

  function open(){
	  showmoreWrapper.classList.add("showmore-is-open");
	  showmoreContainer.style.height = "auto";
  }

  function close(){
	  showmoreWrapper.classList.remove("showmore-is-open");
	  showmoreContainer.style.height = "50px";
  }
</script>